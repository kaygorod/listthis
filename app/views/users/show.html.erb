<div class="row">
  <div class="col-xs-12">
    <% if @user.avatar? %>
      <img src="<%= (@user.avatar_url) %>" class="avatar-user-page text-center">
    <% else %>
      <div class="non-avatar-user-page text-uppercase">
        <% if @user.username? %>
        <%= truncate(@user.username.html_safe, length: 1, :omission => "")%>
        <% else %>
        <%= truncate(@user.email.html_safe, length: 1, :omission => "")%>
        <% end %>
      </div>
    <% end %>
  <h4 class="text-center"><%= @user.username %></h4>
  <p class="text-center">
    <% if user_signed_in? %>
      <% if current_user == @user %>
        <%= link_to 'Редактировать', edit_user_registration_path %>
      <% end %>
    <% end %>
  </p>
  <% if @user.lists.any? %>
    <h3>
      <% if current_user == @user %>
        Ваши списки<%else%>Списки пользователя<%end%> <span class="badge"><%= @user.lists.count %></span></h3>
    <ol>
      <%= render @lists %>
    </ol>
  <% end %>
  </div>
</div>
