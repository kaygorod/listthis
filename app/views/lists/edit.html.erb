<div class="list">
<h2>Редактирование списка: <%= link_to @list.title, list_path(@list) %></h2>
<%= form_for(@list) do |f| %>
  <p>
    <%= f.label "Название" %><br>
    <%= f.text_field :title, class:"form-control" %>
  </p>

  <p>
    <%= f.label "Описание" %><br>
    <%= f.text_area :description, :class => "tinymce",
                    :rows => 10, :cols => 120, class:"form-control" %>
  </p>

   <p>
    <%= f.label "Изображение" %><br>
    <%= f.file_field :image %>
  </p>

  <p>
    <%= f.submit 'Сохранить изменения', class:"btn btn-primary"  %>
  </p>
<% end %>
<%= link_to "Отмена", list_path(@list), class:"btn btn-default",
      data:
      { confirm: "Вы уверены, что хотите покинуть страницу редактирования?" } %>
</div>
