<%= form_for([@list, @list.items.build])do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, :class => "tinymce", :rows => 10, :cols => 120 %>
  </p>

   <p>
    <%= f.label :image %><br>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
  </p>

  <p>
    <%= f.submit 'Сохранить' %>
  </p>
<% end %>
<%= tinymce %>
