$('#items_<%= @list.id %>').append("<%= escape_javascript(render 'items/item', item: @item) %>");
$('#item_title').val('');
$('#item_description').val('');
$("html, body").animate({scrollTop: $("#item_<%= @item.id %>").offset().top},2000);
$('#newItem').modal('hide');
$("#item_<%= @item.id %>").animate({backgroundColor: 'yellow'},2000,function() {
  $("#item_<%= @item.id %>").animate({backgroundColor: 'white'},2000)
});
