<li id="item_<%= item.id %>">
  <h2><a name="<%= (item.id) %>"></a><%= item.title %></h2>
  <% if signed_in? %>
    <% if current_user==item.user %>
      <div class="btn-group right-block">
        <button type="button" class=" btn btn-link dropdown-toggle"
                data-toggle="dropdown" rel="tooltip" title="Настройки">
          <div class="text-muted">
            <span class="glyphicon glyphicon-cog"></span>
          </div>
        </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "Редактировать",
                    edit_list_item_path(@list.id,item.id) %></li>
            <li class="divider"></li>
            <li><%= link_to "Удалить", list_item_path(@list.id,item.id),
               method: :delete, data: { confirm: "Удалить этот пункт?" },
               remote: true %></li>
          </ul>
        </button>
      </div>
    <% end %>
  <% end %>
  </br>
  </br>
  <p><img src="<%= (item.image_url) %>" alt="..." class="img-responsive"></p>
  <span><%= simple_format(item.description) %></span>
  <% if @list.user != item.user %>
    <small class="text-muted">
      Добавил <%= link_to item.user.username, user_path(item.user)%>
      <%= time_ago_in_words(item.created_at) %> назад.
    </small>
  <% end %>
  </br>
  <div class="row">
    <div class="col-xs-12">
      <a rel="nofollow"
         href="#"
         onclick="window.open('https://www.facebook.com/sharer/sharer.php?u=http://slylist.com/lists/<%=@list.id%>/items/<%=item.id%>/&t=<%=item.title%>', '_blank', 'scrollbars=0, resizable=1, menubar=0, left=200, top=200, width=550, height=440, toolbar=0, status=0');return false"
         target="_blank"
         title="Поделиться в Фейсбуке">Фейс</a>
      <a rel="nofollow"
         href="#"
         onclick="window.open('https://vk.com/share.php?url=http://slylist.com/lists/<%=@list.id%>/items/<%=item.id%>/', '_blank', 'scrollbars=0, resizable=1, menubar=0, left=200, top=200, width=550, height=440, toolbar=0, status=0');return false"
         target="_blank"
         title="Поделиться в Вконтакте">
         ВК</a>
      <a rel="nofollow"
         href="#"
         onclick="window.open('https://twitter.com/intent/tweet?text=<%=item.title%>&url=http://slylist.com/lists/<%=@list.id%>/items/<%=item.id%>/&counturl=http://slylist.com/lists/<%=@list.id%>/items/<%=item.id%>/', '_blank', 'scrollbars=0, resizable=1, menubar=0, left=200, top=200, width=550, height=440, toolbar=0, status=0');return false"
         target="_blank"
         title="Поделиться в Твиттере">
         Твит</a>
      <a rel="nofollow"
         href="#"
         onclick="window.open('https://plus.google.com/share?url=http://slylist.com/lists/<%=@list.id%>/items/<%=item.id%>/', '_blank', 'scrollbars=0, resizable=1, menubar=0, left=200, top=200, width=550, height=440, toolbar=0, status=0');return false"
         target="_blank"
         title="Плюсануть в Гугле">
         G+</a>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4">
      <span id="voting_item_<%=item.id%>">
        <%= render "votes/voting", item: item %>
      </span>
      <small class="text-muted">
        Очки: <b id="rating_item_<%=item.id%>"><%= item.rating %></b>/
        Голосов: <%= item.votes.count %>
      </small>
    </div>
    <div class="col-xs-8">
      <div class="pull-right">
        <small class="text-muted">
          <%= link_to "Комментарии:", item_comments_list_item_path(@list.id, :id => item.id), remote: true %>
          <b id="comments_item_<%=item.id%>_count"><%= item.comments.count %></b>
        </small>
      </div>
    </div>
  </div>


  <hr class="line-item">
  <span id="item_<%=item.id%>_comments_form">

  </span>
  <div id="item_comment_<%=item.id%>" class="row">
<span id="ajax_comments_item_<%=item.id%>">


    </span>
    </div>

</li>

