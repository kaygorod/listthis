<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h3 class="text-center">Введите новый пароль</h3>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "Новый пароль" %>
        <% if @minimum_password_length %>
          <em>Минимум (<%= @minimum_password_length %> символов</em><br />
        <% end %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Повторите пароль" %>
      </div>

      <div class="form-group">
        <%= f.submit "Изменить пароль", class:"btn btn-primary btn-lg btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
