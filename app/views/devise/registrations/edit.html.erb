<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h3 class="text-center">Редактировать профиль</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label "Адрес электронной почты" %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "E-mail" %>
      </div>

      <div class="form-group">
        <%= f.label "Ник" %><br />
        <%= f.text_field :username, class: "form-control", placeholder: "Ник"%>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label "Новый пароль" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Введите новый пароль" %>
        <span class="help-block">Оставьте поле пустым,</br>если не хотите менять пароль</span>
      </div>

      <div class="form-group">
        <%= f.label "Подтверждение пароля" %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Повторите пароль" %>
      </div>

      <div class="form-group">
        <%= f.label "Аватар" %><br />
        <%= f.file_field :avatar %>
      </div>

      <div class="form-group">
        <%= f.label "Текущий пароль" %><br />
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control", placeholder: "Введите пароль" %>
        <span class="help-block">Чтобы сохранить внесенные изменения, </br>введите ваш текущий пароль</span>
      </div>

      <div class="form-group">
        <%= f.submit "Обновить информацию", class:"btn btn-primary btn-lg btn-block" %>
      </div>
    <% end %>
    <div class="form-group">
    <%= link_to "Отмена", :back, class:"btn btn-default btn-lg btn-block" %>
    </div>
  </div>
</div>

