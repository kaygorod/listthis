<% if signed_in? %>
  <%= form_for :comment, url:list_comments_path(@list),remote: true do |f| %>
    <div class="row">
    <div class="col-lg-12">
      <div class="input-group">
        <%= f.text_field :content, class: "form-control",
                         placeholder:"Ваш комментарий" %>
        <div>
          <%= f.hidden_field :item_id, :value => item.id %>
        </div>
        <span class="input-group-btn">
          <%= f.submit "Отправить",class: "btn btn-default" %>
        </span>
      </div>
    </div>
    </div>
  <% end %>
<% else %>
  <p><a href="" data-toggle="modal" data-target="#modalSign_in">Войдите</a> или <a href="<%=new_user_registration_path%>">зарегистрируйтесь</a>, чтобы добавить комментарий.</p>
<% end %>

